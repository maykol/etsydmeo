<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag listing.image.url %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "by: #{listing.user.name}" %></p>
            
            <% if (user_signed_in?) && (current_user == listing.user) %>
              <%= link_to 'Editar', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Eliminar', listing, method: :delete, data: { confirm: 'Seguro(a) que deseas eliminar?' }, class: "btn btn-link" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>

<% if user_signed_in? %>
  <%= link_to 'Crear Listing', new_listing_path, class: "btn btn-link" %>
<% end %>